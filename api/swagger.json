                "token": {
                    "type": "string"
                }
            }
        },
        "models.UserSignInSignUp": {
            "type": "object",
            "required": [
                "password",
                "username"
            ],
            "properties": {
                "password": {
                    "type": "string"
                },
                "username": {
                    "type": "string"
                }
            }
        }
    }
